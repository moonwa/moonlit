@model Moonlit.Mvc.Controls.TextBox
@functions{
    private string Properties()
    {
        List<string> props = new List<string>();
        props.Add("trim:true");
        props.Add("selectOnClick:true");
        if (!Model.Enabled)
        {
            props.Add("disabled:true");
        }

        if (!string.IsNullOrEmpty(Model.PlaceHolder))
        {
            props.Add("placeHolder:'" + Model.PlaceHolder + "'");
        }
        return string.Join(",", props);
    }

}
@{
    this.GetDojo().AddRequire("dijit/form/TextBox");
}
 
<input type="text" value="@Model.Value"
       data-dojo-type="dijit/form/TextBox"
       data-dojo-props="@Properties()"  name="@Model.Name" id="@Model.Id" />