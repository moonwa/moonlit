@using Moonlit.Mvc
@using Moonlit.Mvc.Url
@model Moonlit.Mvc.Controls.MultiLineTextBox
@{
    Scripts.Current.RegisterScript("plugin:autosize", new Script()
    {
        Src = Url.Asset("clip-one/plugins/autosize/jquery.autosize.min.js")
    });
    Scripts.Current.RegisterScript("plugin:autosize:startup", new Script()
    {
        Content = "$(function(){ $('textarea.autosize').autosize(); });"
    });
}
@functions{
     string Readonly(bool enabled)
     {
         if (enabled)
         {
             return "";
         }
         return "readonly";
     }
}
 
<textarea class="autosize form-control" @Readonly(Model.Enabled) name="@Model.Name" id="@Model.Id" style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 94px;">@Model.Value</textarea>
