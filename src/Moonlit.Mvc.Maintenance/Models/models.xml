<?xml version="1.0" encoding="utf-8" ?>
<models xmlns="http://hizhanzhang.com/moonlit/mvc/maint/models"  namespace="Moonlit.Mvc.Maintenance.Models"  defaultResourceType="Moonlit.Mvc.Maintenance.Properties.MaintCultureTextResources">
  <import>Moonlit.Mvc.Maintenance.Properties</import>
  <import>Moonlit.Mvc.Maintenance.SelectListItemsProviders</import>
  <model name="AdminUserListModel" resourceName="AdminUser">
    <properties>
      <add name="Keyword" type="string">
        <display name="Keyword"/>
        <field width="6">
          <control>
            <textbox />
          </control>
        </field>
        
      </add>
      <add name="UserName" type="string">
        <field width="6">
          <control>
            <textbox />
          </control>
        </field>
      </add>
      <add name="IsEnabled" type="bool?">
        <field width="6">
          <control>
            <checkbox />
          </control>
        </field>
      </add>
    </properties>
    <methods>
      <administrationSimpleListTemplate />
    </methods>
  </model>
  <model name="AdminUserCreateModel" resourceName="AdminUser" base="IEntityMapper&lt;User&gt;">
    <mapping default="enabled" mappingType="User" />
    <properties>
      <add name="UserName" type="string">
        <mapping />
        <field width="6">
          <control>
            <textbox />
          </control>
        </field>
      </add>
      <add name="LoginName" type="string">
        <mapping />
        <field width="6">
          <control>
            <textbox />
          </control>
        </field>
      </add>
      <add name="Password" type="string">
        <mapping />
        <field width="6">
          <control>
            <passwordbox />
          </control>
        </field>
      </add>
      <add name="Gender" type="Gender?">
        <mapping />
        <field width="6">
          <control>
            <selectlist provider="Enum" />
          </control>
        </field>
      </add>
      <add name="DateOfBirth" type="DateTime?">
        <mapping />
        <field width="6">
          <control>
            <datepicker />
          </control>
        </field>
      </add>
      <add name="IsSuper" type="bool" enabled="false">
        <mapping />
        <field width="6">
          <control>
            <checkbox />
          </control>
        </field>
      </add>
      <add name="Roles" type="int[]" >
        <mapping stub="true"/>
        <field width="6">
          <control>
            <selectlist provider="Role" />
          </control>
        </field>
      </add>
      <add name="IsEnabled" type="bool">
        <field width="6">
          <control>
            <checkbox />
          </control>
        </field>
      </add>
    </properties>
    <methods>
      <administrationSimpleEditTemplate />
      <entityMapper target="User"/>
    </methods>
  </model>
</models>